<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abcgeometrie" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChooseDefiActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activity.ChooseLevelActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activity.QuestionActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activity.EndGameActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".activity.ChooseThemeActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity

            android:name=".activity.BoardActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activity.AlizazaActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activity.TeamActivity"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
