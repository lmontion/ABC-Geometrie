<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0px"
    android:paddingRight="20px"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.abcgeometrie.ChooseDefiActivity"
    android:background="@color/monBleu">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="46px"
        android:id="@+id/btnHome"
        android:src="@drawable/btnaccueil"
        android:layout_marginLeft="50px"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="46px"
        android:id="@+id/btnTTS"
        android:src="@drawable/btnspeaker"
        android:layout_marginLeft="180px"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLang"
            android:layout_gravity="right"
            android:width="80px"
            android:height="46px"
            android:background="@drawable/france"/>

        <TextView
            android:id="@+id/textChooseDefi"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="97dp"
            android:text="@string/chooseDefi"
            android:textSize="85px"
            android:layout_marginTop="60px"
            android:textColor="@color/monBlanc"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="50px">

            <Button
                android:layout_width="700px"
                android:layout_height="100px"
                android:text="@string/dixPts"
                android:id="@+id/btn10"
                android:background="@color/monVert"
                android:layout_marginBottom="30px"
                android:textSize="70px"
                android:textColor="@color/monBlanc"
                android:textAllCaps="false"
                android:singleLine="true"
                android:gravity="right"
                android:paddingRight="70dp"/>

            <Button
                android:layout_width="900px"
                android:layout_height="100px"
                android:text="@string/vingtsPts"
                android:id="@+id/btn20"
                android:background="@color/monJaune"
                android:layout_marginBottom="30px"
                android:textAllCaps="false"
                android:textSize="70px"
                android:textColor="@color/monBlanc"
                android:singleLine="true"
                android:gravity="right"
                android:paddingRight="70dp"/>

            <Button
                android:layout_width="1100px"
                android:layout_height="100px"
                android:text="@string/quarantePts"
                android:id="@+id/btn40"
                android:background="@color/monOrange"
                android:textAllCaps="false"
                android:textSize="70px"
                android:textColor="@color/monBlanc"
                android:singleLine="true"
                android:gravity="right"
                android:paddingRight="70dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
