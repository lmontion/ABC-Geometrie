<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/monBleu"
    android:id="@+id/relativeLayoutHome">


    <RelativeLayout
        android:id="@+id/bandeSuperieur"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/monVert"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textViewAbc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="abc"
            android:textSize="150dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/monBlanc"/>

        <TextView
            android:id="@+id/textViewDeLa"
            android:layout_toRightOf="@+id/textViewAbc"
            android:layout_alignBaseline="@+id/textViewAbc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" de la"
            android:textSize="68dp"
            android:textColor="@color/monBlanc"/>

        <ImageButton
            android:id="@+id/btnIUT"
            android:layout_toLeftOf="@+id/btnAlizaza"
            android:layout_width="270dp"
            android:background="@drawable/btn_iut"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnAlizaza"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_alizaza"
            android:layout_width="180dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bandeSuperieur">


        <TextView
            android:id="@+id/textViewGeometrie01"
            android:layout_marginLeft="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:text="G"
            android:textSize="120dp"
            android:textColor="@color/monBlanc"/>

        <TextView
            android:id="@+id/textViewGeometrie02"
            android:layout_toRightOf="@+id/textViewGeometrie01"
            android:layout_alignBaseline="@+id/textViewGeometrie01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="éométrie "
            android:textSize="82dp"
            android:textColor="@color/monBlanc"/>

        <ImageView
            android:id="@+id/triangleDebut"
            android:layout_toRightOf="@+id/textViewGeometrie02"
            android:background="@drawable/triangle_accueil_debut"
            android:layout_marginTop="46dp"
            android:layout_width="57dp"
            android:layout_height="65dp"/>

        <ImageView
            android:id="@+id/rectangle"
            android:layout_toRightOf="@+id/triangleDebut"
            android:layout_alignBottom="@+id/triangleDebut"
            android:background="@drawable/rectangle_accueil"
            android:layout_width="42dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/triangleFin"
            android:layout_toRightOf="@+id/rectangle"
            android:layout_alignBottom="@+id/triangleDebut"
            android:layout_width="56dp"
            android:layout_height="65dp"
            android:background="@drawable/triangle_accueil_fin"/>

        <TextView
            android:id="@+id/textViewBaseLine"
            android:layout_below="@+id/textViewGeometrie01"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De 4 à 77 ans... et plus !"
            android:textSize="33dp"
            android:textColor="@color/monBlanc"/>

    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/bande_inferieur_accueil"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/drapeauAngleterre"
            android:layout_toLeftOf="@+id/drapeauFrance"
            android:layout_centerVertical="true"
            android:background="@drawable/angleterre_accueil"
            android:layout_width="150dp"
            android:layout_height="87dp" />

        <ImageButton
            android:id="@+id/drapeauFrance"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:background="@drawable/france_accueil"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_width="150dp"
            android:layout_height="87dp" />

        <ImageButton
            android:id="@+id/drapeauEspagne"
            android:layout_toRightOf="@+id/drapeauFrance"
            android:layout_centerVertical="true"
            android:background="@drawable/espagne_accueil"
            android:layout_width="150dp"
            android:layout_height="87dp" />

    </RelativeLayout>

</RelativeLayout>

