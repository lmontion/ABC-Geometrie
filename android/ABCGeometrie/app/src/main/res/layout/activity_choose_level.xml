<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0px"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff68a8ff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_gravity="right"
            android:width="140px"
            android:height="81px"
            android:background="@drawable/france"/>

        <TextView
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="97dp"
            android:text="Choissis un niveau"
            android:textSize="85px"
            android:textColor="#ffffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="100px">

            <TextView
                android:id="@+id/num_txt"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="175px"
                android:layout_marginRight="150px"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="75dp" />

            <TextView
                android:id="@+id/num_txt2"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginRight="150px"
                android:background="@drawable/square"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="75dp" />

            <TextView
                android:id="@+id/num_txt3"
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="@drawable/diamond"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="75dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>