<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/monBleu">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/labeleAlizaza"
            android:textSize="75px"
            android:textColor="@color/monBlanc"
            android:paddingTop="25px"
            android:gravity="center"
            android:id="@+id/txtViewAlizaza" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125px"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labeleAlizaza"
            android:background="@drawable/alizaza"
            android:textSize="75px"
            android:textColor="@color/monBlanc"
            android:paddingTop="25px"
            android:gravity="center"
            android:id="@+id/logoAlizaza" />

    </LinearLayout>
</RelativeLayout>