<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/monNoir">

    <Button
        android:id="@+id/btnEs"
        android:layout_width="@dimen/size_flag_lang_width"
        android:layout_height="@dimen/size_flag_lang_height"
        android:layout_marginLeft="100px"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/espagne"/>

    <Button
        android:id="@+id/btnEn"
        android:layout_width="@dimen/size_flag_lang_width"
        android:layout_height="@dimen/size_flag_lang_height"
        android:layout_marginLeft="260px"
        android:layout_marginRight="10px"
        android:background="@drawable/angleterre"/>

    <Button
        android:id="@+id/btnLang"
        android:layout_width="@dimen/size_flag_lang_width"
        android:layout_height="@dimen/size_flag_lang_height"
        android:layout_marginLeft="420px"
        android:background="@drawable/france"/>

</RelativeLayout>