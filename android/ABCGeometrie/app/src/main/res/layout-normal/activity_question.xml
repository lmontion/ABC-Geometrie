<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0px"
    android:paddingRight="20px"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/monBleu">

    <TextView
        android:layout_width="726dp"
        android:gravity="left"
        android:layout_height="97dp"
        android:text="@string/labelQuest"
        android:textSize="60px"
        android:textColor="@color/monBlanc"
        android:id="@+id/txtViewQuestion"
        android:paddingLeft="50px"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="@dimen/size_flag_lang_width"
            android:layout_height="@dimen/size_flag_lang_height"
            android:id="@+id/btnLang"
            android:layout_gravity="right"
            android:background="@drawable/france"
            android:layout_marginBottom="50px"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="721dp"
            android:layout_height="193dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rep1"
                android:layout_gravity="right"
                android:width="267px"
                android:height="200px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:background="@drawable/carreblanc"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rep2"
                android:width="267px"
                android:height="200px"
                android:background="@drawable/carreorange"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="724dp"
            android:layout_height="219dp"
            android:layout_marginTop="15px">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rep3"
                android:layout_gravity="right"
                android:width="267px"
                android:height="200px"
                android:layout_marginLeft="100px"
                android:layout_marginRight="100px"
                android:background="@drawable/carrerouge"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rep4"
                android:layout_gravity="right"
                android:width="267px"
                android:height="200px"
                android:background="@drawable/carrevert"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>